<?xml version="1.0" encoding="utf-8"?>
<com.dexafree.materialList.card.CardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/Material_Card_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/Material_Card_Title_Image"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textStyle="normal|bold"
                tools:text="Title" />

            <ImageView
                android:id="@+id/head_image"
                style="@style/Material_Card_Head_Image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/ic_menu_report_image" />


            <TextView
                android:id="@+id/subtitle"
                style="@style/Material_Card_Subtitle_Image"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textSize="12sp"
                tools:text="R$ 999999,00" />

            <TextView
                android:id="@+id/subtitle2"
                style="@style/Material_Card_Subtitle_Image"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textColor="@android:color/black"
                tools:text="R$ 999999,00" />

            <TextView
                android:id="@+id/description"
                style="@style/Material_Card_Subtitle_Image"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textSize="12sp"
                tools:text="1x de R$ 999999,00" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.dexafree.materialList.card.CardLayout>