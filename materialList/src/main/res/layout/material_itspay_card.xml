<?xml version="1.0" encoding="utf-8"?>

<com.dexafree.materialList.card.CardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/Material_Card_View"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="@dimen/card_elevation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardItsPayLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/card4"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/green_opatic"
            android:layout_height="200dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/title"
                    style="@style/Material_Card_Title"
                    tools:text="Vale Alimentação"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#000000"
                    android:shadowDx="5" android:shadowDy="5"
                    android:shadowRadius="1.8"
                    android:elevation="20dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif" />

                <TextView android:id="@+id/subtitle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="16dp"
                    android:textSize="17dp"
                    tools:text="4006-xxxx-xxxx-1448"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.8" />

                <TextView android:id="@+id/subtitle2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="16dp"
                    tools:text="Saldo: R$0,00"
                    android:textSize="16dp"
                    android:elevation="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="normal|bold"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.8" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    style="@style/Material_Card_Supporting_Text_16dp"
                    tools:text="CARLOS FAGUNDES"
                    android:id="@+id/supportingText"
                    android:textStyle="normal|bold"
                    android:elevation="20dp"
                    android:textSize="16dp"
                    android:textColor="@android:color/white"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1.8"/>

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</com.dexafree.materialList.card.CardLayout>